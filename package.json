
{
  "name": "psql-buddy",
  "version": "0.1.10",
  "author": "Hamilton Junior",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "electron": "electron .",
    "start": "npm run dev:all",
    "dev:all": "concurrently -n \"VITE,SERVER,APP\" -c \"blue,green,magenta\" \"npm run dev\" \"npm run server\" \"cross-env SKIP_BACKEND=1 npm run electron\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.3.0",
    "@monaco-editor/react": "^4.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "lucide-react": "^0.475.0",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.psqlbuddy.app",
    "productName": "PSQL Buddy",
    "copyright": "Copyright Â© 2026",
    "files": [
      "dist/**/*",
      "main.js",
      "server.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
