{
  "name": "psqlBuddy",
  "version": "0.2.21",
  "author": "Hamilton Junior",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hamilton-Junior/psqlBuddy"
  },
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite --host 127.0.0.1",
    "server": "node server.js",
    "electron": "electron .",
    "start": "npm run dev:all",
    "dev:all": "concurrently -n \"VITE,SERVER,APP\" -c \"blue,green,magenta\" \"npm run dev\" \"npm run server\" \"cross-env SKIP_BACKEND=1 npm run electron\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dist": "node -e \"const {execSync}=require('child_process'); const c=parseInt(execSync('git rev-list --count HEAD').toString().trim()); const major=Math.floor(c/1000); const minor=Math.floor((c%1000)/100); const patch=c%100; const v=major+'.'+minor+'.'+patch; const b=execSync('git rev-parse --abbrev-ref HEAD').toString().trim(); console.log('--- BUILD INFO ---'); console.log('Version:', v); console.log('Branch:', b); console.log('------------------'); execSync('npm run build', {stdio:'inherit'}); const builderCmd='electron-builder --publish always -c.extraMetadata.version='+v+' -c.nsis.artifactName=\\\"PSQL Buddy Setup '+v+'-'+b+'.exe\\\"'; execSync(builderCmd, {stdio:'inherit'})\""
  },
  "dependencies": {
    "@google/genai": "1.35.0",
    "@monaco-editor/react": "4.7.0",
    "cors": "2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^5.2.1",
    "html2canvas": "1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "0.475.0",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "2.5.1",
    "recharts": "2.15.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.0",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "postcss": "8.5.1",
    "tailwindcss": "4.0.0",
    "typescript": "5.7.3",
    "vite": "^6.4.1"
  },
  "build": {
    "appId": "com.psqlbuddy.app",
    "productName": "PSQL Buddy",
    "copyright": "Copyright Â© 2026",
    "publish": [
      {
        "provider": "github",
        "owner": "Hamilton-Junior",
        "repo": "psqlBuddy"
      }
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "server.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PSQL Buddy"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
